@model MVCSample.ViewModels.OrderViewModel
@{
    ViewData["Title"] = "Add";
}

<h1>Create Order</h1>

<form method="post">
    <table class="table table-borderless">
        <tr>
            <td>
                <div class="form-group">
                    <label>Customer Name</label>
                    <select id="customerId" class="form-control">
                        <option></option>
                        @foreach (var customer in @Model.Customers)
                        {
                            <option class="customerUniq_id" value="@customer.CustomerId">
                                @customer.FullName
                            </option>
                        }
                    </select>
                </div>
            </td>
        </tr>
    </table>

    <table class="table table-borderless">
        <tr>
            <th>Product Name</th>
            <th>Unit Price</th>
            <th>Quantity</th>
            <th></th>
        </tr>

        <tr>
            <td>
                <select id="productId" class="form-control">
                    <option></option>
                    @foreach (var product in @Model.Products)
                    {
                        <option value="@product.ProductId"
                                data-unit-price="@product.UnitPrice">
                        @product.Name
                        </option>
                    }
                </select>
            </td>

            <td>
                <input type="text" id="unitPrice" class="form-control" readonly />
            </td>

            <td>
                <input type="number" id="quantity" class="form-control" min="1" value="1" />
            </td>

            <td>
                <button type="submit" id="btnAdd" class="btn btn-primary">Add</button>
            </td>
        </tr>
    </table>

    <table id="orderItems" class="table">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Quantity</th>
                <th>Unit Price</th>
                <th>Total</th>
            </tr>
        </thead>

        <tbody id="table-OrderItems">
        </tbody>

        <tfoot>
            <tr id="row_grandTotal">
                <td class="text-primary">Grand Total</td>
                <td></td>
                <td></td>
                <td id="grandTotal" class="text-primary">0</td>
            </tr>
        </tfoot>
    </table>

    <div class="text-center">
        <span>
            <button type="submit" id="btnSave" class="btn btn-success">Save</button>
            <a asp-action="Index" class="btn btn-danger">Cancel</a>
        </span>
    </div>

</form>

<script src="~/js/Order/AddOrder.js"></script>