@model IEnumerable<MVCSample.Entity.OrderPL>
@{
    ViewData["Title"] = "Index";
}

<h1>List Of Orders</h1>

<a asp-controller="Order"
   asp-action="Add"
   class="btn btn-primary">
    Add Order
</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Order Date</th>
            <th>Customer ID</th>
            <th>Order Amount</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var order in Model)
		{
            <tr>
                <td>@order.OrderId</td>
                <td>@order.OrderDate</td>
                <td>@order.CustomerId</td>
                <td>@order.TotalAmount</td>

                <td>
                    @Html.ActionLink("Edit","Edit","Order", new {id = order.OrderId}) |
                    @Html.ActionLink("Delete","Delete","Order",new {id = order.OrderId})
                </td>
            </tr>
		}
    </tbody>
</table>

